@page
@model Turney_Keeper.Pages.Turneys.ScoreInputModel

<h1>Input Score for</h1>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="RoundNumber" />
    <input type="hidden" asp-for="MatchNumber" />

    <div>
        <label for="User1Score">User1 Score:</label>
        <input type="number" id="User1Score" name="User1Score" asp-for="User1Score" required />
    </div>

    <div>
        <label for="User2Score">User2 Score:</label>
        <input type="number" id="User2Score" name="@Model.GetUserName(Model.match.User1Id)" asp-for="@Model.GetUserName(Model.match.User2Id.Value)" required />
    </div>

    <div>
        <label for="AdvanceUser">Advance User:</label>
        <select id="AdvanceUser" name="AdvanceUser" asp-for="AdvanceUser" required>
            <option value="@Model.match.User1Id">@Model.GetUserName(Model.match.User1Id)</option>
            <option value="@Model.match.User2Id">@Model.GetUserName(Model.match.User2Id.Value)</option>
        </select>
    </div>

    <button type="submit">Submit Scores</button>
</form>