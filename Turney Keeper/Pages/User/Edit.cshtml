@page "/User/Edit"
@model Turney_Keeper.Pages.User.EditModel

@{
    ViewData["Title"] = "Edit your personal information";
}


<h4>Users</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-page-handler="ChangeUsername">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Users.Id" />
            <div class="form-group">
                <label asp-for="Users.Username" class="control-label"></label>
                <input asp-for="Users.Username" class="form-control" />
                <span asp-validation-for="Users.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" name="changeUsername" class="btn btn-primary" />
            </div>
        </form>
        <form method="post" asp-page-handler="ChangeNameAndSurname">
            <div class="form-group">
                <label asp-for="Users.Name" class="control-label"></label>
                <input asp-for="Users.Name" class="form-control" />
                <span asp-validation-for="Users.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Users.Surname" class="control-label"></label>
                <input asp-for="Users.Surname" class="form-control" />
                <span asp-validation-for="Users.Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" name="changeNameAndSurname" class="btn btn-primary" />
            </div>
        </form>
        <form method="post" asp-page-handler="ChangePassword">
            <div class="form-group">
                <label asp-for="OldPassword" class="control-label"></label>
                <input asp-for="OldPassword" type="password" class="form-control" />
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Users.Password" class="control-label"></label>
                <input asp-for="Users.Password" type="password" class="form-control" />
                <span asp-validation-for="Users.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Users.ConfirmPassword" class="control-label"></label>
                <input asp-for="Users.ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="Users.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" name="changePassword" class="btn btn-primary" />
            </div>
        </form>
        <form method="post" asp-page-handler="ChangeEmail">
            <div class="form-group">
                <label asp-for="Users.Email" class="control-label"></label>
                <input asp-for="Users.Email" class="form-control" />
                <span asp-validation-for="Users.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" name="changeEmail" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/User/Details">Back to Profile</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
